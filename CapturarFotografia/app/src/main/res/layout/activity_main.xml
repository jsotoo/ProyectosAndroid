<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jonathan.capturarfotografia.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAM_APP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066"
        app:layout_constraintHorizontal_bias="0.456"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="129dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/imView"
        android:layout_width="218dp"
        android:layout_height="192dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="80dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp" />

    <Button
        android:id="@+id/btnImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto Captura"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="319dp"
        android:layout_below="@+id/imView"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@+id/imView"
        android:layout_alignStart="@+id/imView"
        android:layout_alignRight="@+id/imView"
        android:layout_alignEnd="@+id/imView" />

</RelativeLayout>
